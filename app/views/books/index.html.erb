<%= render "users/list", user: @user, book: @book %>

<h1>Books</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

<% @books.each do |book| %>
 <tr>
   <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg' ,fallback: "no_image.jpg" %></td>
   <td><%= link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
 </tr>
<% end %>

</table>


<h1>Books</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
</table>

<% @books.each do |book| %>
<%= link_to book.title, book_path(book.id) %>
<%= book.body %>
<% end %>



<div class="col-lg-4">
<h1>User info</h1>

  
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
  
<table class="table">
  <tr>
    <td><h4>name</h4></td>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <td><h4>introducution</h4></td>
    <td><%= user.introduction %></td>
  </tr>
</table>
<%= link_to "編集", edit_user_path(user.id) %>


<h1>New book</h1>

<%= form_for(book, url: books_path) do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <%= f.submit "Create Book" %>
<% end %>
</div>
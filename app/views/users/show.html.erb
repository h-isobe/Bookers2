<h1>User info</h1>

<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %><br>
<h4>name</h4>
<%= @user.name %>
<h4>introducution</h4>
<%= @user.introduction %><br>
<%= link_to "編集", edit_user_path(@user.id) %>


<h1>New book</h1>

<%= form_for(@book, url: books_path) do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <%= f.submit "Create Book" %>
<% end %>


<h1>Books</h1>

<table>
  <tr>
    <th>Title</td>
    <th>Opinion</td>
  </tr>
</table>

<% @books.each do |book| %>
<%= book.title %>
<%= book.body %>
<% end %>


<%= render "users/list", user: @user, book: @book %>

<div class="col-xs-9">

<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</td>
      <th>Opinion</td>
      <th colspan="3"></th>
    </tr> 
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg' ,fallback: "no_image.jpg" %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
  <% end %>
</table>
</div>
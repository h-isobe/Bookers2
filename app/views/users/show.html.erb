<%= render "users/list", user: @user, book: @book %>

<h1>Books</h1>

<table>
  <tr>
    <th>Title</td>
    <th>Opinion</td>
  </tr>
</table>

<% @books.each do |book| %>
<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
<%= link_to book.title, book_path(book.id) %>
<%= book.body %>
<% end %>
